<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile"
    tools:context=".ProfileActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:text="user_name"
        android:layout_below="@+id/visit_profile_image"
        android:layout_marginLeft="15dp"
        android:id="@+id/visit_user_name"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginRight="15dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="150dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"

        android:id="@+id/visit_profile_image"
        android:src="@drawable/profile_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am a member of puechat!"
        android:layout_below="@+id/visit_profile_image"
        android:layout_marginLeft="15dp"
        android:textColor="@color/text"
        android:id="@+id/visit_user_status"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_messege_request_button"
        android:layout_below="@+id/visit_user_status"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button"
        android:text="Send Messege Request"
        android:textAllCaps="false"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decline_messege_request_button"
        android:layout_below="@+id/send_messege_request_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button"
        android:visibility="invisible"
        android:text="Cancel Messege Request"
        android:textAllCaps="false"
        android:textSize="20sp"
        />


</RelativeLayout>